<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textView_main" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textViewTextColor_main</item>
        <item name="android:background">@color/textViewBckgColor_main</item>
        <item name="android:textSize">@dimen/textViewTextDimen_main</item>
    </style>

    <style name="editText_main" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/editTextTextColor_main</item>
        <item name="android:textSize">@dimen/editTextTextDimen_main</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">0</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttons_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/editTextTextDimen_main</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="textViewResult_main" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/textViewTextColor_main</item>
        <item name="android:background">@color/textViewBckgColor_main</item>
        <item name="android:textSize">@dimen/textViewTextDimen_main</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
